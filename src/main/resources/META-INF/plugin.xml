<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.sitemap</id>
    <name>Sitemap</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <dependencies>
        <plugin id="com.intellij.modules.platform"/>
        <plugin id="com.intellij.modules.database"/>
    </dependencies>
    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- TXT-->
        <fileType
                name="Sitemap Text"
                implementationClass="com.github.xepozz.sitemap.txt.SitemapTxtFileType"
                fieldName="INSTANCE"
                language="Sitemap.txt"
                patterns="*sitemap*.txt"
                fileNamesCaseInsensitive="sitemap.txt"/>
        <lang.parserDefinition
                language="Sitemap.txt"
                implementationClass="com.github.xepozz.sitemap.txt.language.SitemapTxtParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Sitemap.txt"
                implementationClass="com.github.xepozz.sitemap.txt.language.SitemapTxtSyntaxHighlighterFactory"/>
        <annotator
                language="Sitemap.txt"
                implementationClass="com.github.xepozz.sitemap.txt.language.SitemapTxtAnnotator"/>

        <!-- XML-->
        <fileType
                name="Sitemap XML File"
                implementationClass="com.github.xepozz.sitemap.SitemapFileType"
                fieldName="INSTANCE"
                language="XML"
                patterns="*sitemap*.xml"
                fileNamesCaseInsensitive="sitemap.xml"/>
        <fileEditorProvider
                id="sitemap editor" order="first"
                implementation="com.github.xepozz.sitemap.xml.editor.SitemapTableFileEditorProvider"/>

        <internalFileTemplate name="Sitemap Example"/>
        <internalFileTemplate name="Sitemap Index Example"/>
        <registryKey
                key="sitemap.open.as.tables.by.default" defaultValue="true"
                description="Show sitemap as a table by default"/>
    </extensions>

    <actions>
        <action class="com.github.xepozz.sitemap.xml.SitemapFileAction"
                id="com.github.xepozz.sitemap.xml.SitemapFileAction"
                icon="/icons/sitemap/pluginIcon.svg">
            <add-to-group group-id="NewWebDevelopment" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
